<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailBukuAdminActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="340dp"
                android:layout_height="420dp"
                android:id="@+id/image_buku_detail_admin"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp" />

            <View
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="1dp"
                android:background="@color/abuabu"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_pinjam_buku_admin_admin"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="HAPUS BUKU"
                android:textColor="#FFFF"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/button_pinjam"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="15dp">
            </androidx.appcompat.widget.AppCompatButton>

            <View
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="1dp"
                android:background="@color/abuabu"
                android:layout_marginBottom="10dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Judul"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/judul_buku_detail_admin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="1dp"
                        android:text="judul"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Edisi"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/edisi_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Edisi"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="No. Panggil"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/nopanggil_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="No. panggil"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="ISBN/ISSN"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/isbn_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Isbn/issn"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Ditulis Oleh"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/ditulis_oleh_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Status"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Subyek/Subjek"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/subjek_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Subyek/Subjek"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Klasifikasi"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/klasifikasi_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Klasifikasi"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Judul Seri"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/judul_seri_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Judul seri"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="GMD"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/gmd_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="GMD"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Bahasa"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/bahasa_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Bahasa"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Penerbit"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/penerbit_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Penerbit"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Tahun Terbit"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/tahun_terbit_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Tahun Terbit"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Tempat Terbit"
                        android:textSize="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <TextView
                        android:id="@+id/tempat_ternit_buku_detail_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textSize="15dp"
                        android:text="Tempat Terbit"
                        android:layout_marginBottom="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abstrak :"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
            android:id="@+id/abstrak_buku_detail_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Abstrak"
            android:layout_marginTop="5dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatButton
                    android:text="PDF"
                    android:id="@+id/Button_pdf_admin"
                    android:layout_marginTop="15dp"
                    android:layout_width="170dp"
                    android:layout_height="43dp"
                    android:textColor="#FFFF"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/button_pinjam"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="15dp"
                    android:drawablePadding="40dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>